@page
@model VistarRazor.Pages.Videos.IndexModel
@{
}

<head>
    <!-- Otras etiquetas head -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>


<!-- Barra de búsqueda -->
<div class="d-flex justify-content-center my-4">
    <form class="form-inline" method="get">
        <div class="input-group">
            <input type="text" class="form-control" name="searchTerm" placeholder="Buscar videos..." value="@Model.SearchTerm" />
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Buscar</button>
            </div>
        </div>
    </form>
</div>

<hr />

<br />

<!-- Grid-->
@if (Model.videos != null && Model.videos.Count > 0)
{
    <section class="page-section bg-light" id="portfolio">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Videos recomendados</h2>
                <br>
            </div>
            <div class="row">
                @foreach (var video in Model.videos)
                {
                    <div class="col-lg-4 col-sm-6 mb-4">
                        <!-- Item-->
                        <div class="portfolio-item">
                            <a class="portfolio-link" data-bs-toggle="modal" href="#portfolioModal@video.Id">
                                <div class="portfolio-hover">
                                    <div class="portfolio-hover-content"><i class="fas fa-plus fa-3x"></i></div>
                                </div>
                                <img class="img-fluid" src="@video.Miniatura" alt="..." />
                            </a>
                            <div class="portfolio-caption">
                                <div class="portfolio-caption-heading">@(@video.Nombre.Length > 20 ? @video.Nombre.Substring(0, 20) : @video.Nombre)</div>
                                <div class="portfolio-caption-subheading text-muted">@(@video.Descripción.Length > 40 ? @video.Descripción.Substring(0, 40) : @video.Descripción)</div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal-->
                    <div class="portfolio-modal modal fade" id="portfolioModal@video.Id" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="close-modal" data-bs-dismiss="modal"><img src="assets/img/close-icon.svg" alt="Close modal" /></div>
                                <div class="container">
                                    <div class="row justify-content-center">
                                        <div class="col-lg-8">
                                            <div class="modal-body">
                                                <!-- Project details-->
                                                <h2 class="text-uppercase">@video.Nombre</h2>
                                                <p class="item-intro text-muted">@video.Canal</p>
                                                <img class="img-fluid d-block mx-auto" src="@video.Miniatura" alt="..." />
                                                <p>@video.Descripción</p>
                                                <ul class="list-inline">
                                                    <li>
                                                        <strong>Fecha de publicación:</strong> @video.Fecha
                                                    </li>
                                                </ul>
                                                <button class="btn btn-primary btn-xl text-uppercase" data-bs-dismiss="modal" type="button">
                                                    <i class="fas fa-play me-1"></i>
                                                    <a class="card-title" style="color:white" asp-page="./Detalle" asp-route-id="@video.Id">Ver video</a>
                                                </button>
                                                <button class="btn btn-primary btn-xl text-uppercase" data-bs-dismiss="modal" type="button">
                                                    <i class="fas fa-xmark me-1"></i>
                                                    Cerrar
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
else
{
    <p>No hay videos para mostrar.</p>
}